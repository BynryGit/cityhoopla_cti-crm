        $(document).ready(function(){
			keyword = 'abcd';
			alert(keyword);

			 var oTable = $('#advert_table').dataTable({
					"bFilter": true,
               "bLengthChange": false,
               "iDisplayLength": 20,
            	'bScrollCollapse':true,
                 "ajax": "/advert-search/?advert_keyword="+keyword,
                  "columns": [
  					 {"data": "advert_title"},
                {"data": "advert_name"},
                {"data": "advert_area"},
                {"data": "category"},
                {"data": "end_date"} ,
		            ],
		             "order": [[0, "asc"]],
		            "cache": false 
        })
           
 		});
 		

 
    
